# Docker Environment Variables Template
# Copy this file to .env.docker and update the values

# ============================================
# Database Configuration
# ============================================
# These are automatically set in docker-compose.yml
# POSTGRES_URL=postgres://postgres:postgres@db:5432/work_management
# POSTGRES_URL_NON_POOLING=postgres://postgres:postgres@db:5432/work_management

# ============================================
# NextAuth.js Configuration
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here-please-change-this-in-production

# Application URL (change for production)
NEXTAUTH_URL=http://localhost:3000

# ============================================
# Production Only (docker-compose.prod.yml)
# ============================================
# Database password for production
POSTGRES_PASSWORD=your-secure-password-here
