# Database (Vercel Postgres)
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=

# NextAuth.js v5
# Generate: openssl rand -base64 32
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Development Settings
# Set to "true" to disable authentication in development mode
DISABLE_AUTH=false

# ============================================
# Email Configuration (Issue #122)
# ============================================

# Email Provider: 'smtp' (default) or 'resend'
# Use 'smtp' for local development with Mailpit
# Use 'resend' for production
EMAIL_PROVIDER=smtp

# Development Email Settings (Mailpit)
# Start Mailpit: docker-compose up mailpit
# Web UI: http://localhost:8025
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@work-management.local
SMTP_SECURE=false

# Production Email Settings (Resend)
# Uncomment and configure for production use
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxx
# SMTP_FROM=noreply@yourdomain.com

# Optional: Preview mode for development (log emails instead of sending)
EMAIL_PREVIEW_MODE=false
